<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/base"
    android:background="@color/color_toolbar_bg">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@color/color_toolbar_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="QQ Music"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_skip_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ImageThemeActivity"/>

        <Button
            android:id="@+id/btn_theme_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ThemeTestActivity"/>

        <Button
            android:id="@+id/btn_status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StatusBarAcivity"/>

        <Button
            android:id="@+id/btn_mupdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserDefinedActivity"/>

        <Button
            android:id="@+id/btn_user_define"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MuPdfActivity"/>

        <Button
            android:id="@+id/btn_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fragment"/>

    </LinearLayout>



</RelativeLayout>
